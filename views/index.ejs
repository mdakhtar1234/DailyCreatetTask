<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Document</title>
</head>
<body>

  <div class="w-full min-h-screen bg-zinc-900">
    <div class="text-white flex items-center justify-center text-3xl">
   <h1 class="mt-5 text-green-300">Daily Task Create App</h1> 
    </div>
    <div class="form p-10 text-white">
      <form action="/create" method="post">
        <input class="block px-5 py-2 w-full rounded-lg bg-zinc-800" type="text" placeholder="title" name="title">
       <textarea class="block px-5 py-2 mt-3 w-full rounded-lg resize-none bg-zinc-800" placeholder="write your task....." name="details"></textarea>
          <input class="mt-2 bg-blue-600 px-5 py-2 rounded-lg" type="submit" value="create task">
      </form>
    </div>
    <div class="task flex gap-3 flex-wrap p-10">
      
      <% if(files.length >0) {%>
        <% files.forEach(function(val){ %>
        
    <div class="task w-72  px-3 py-4 bg-zinc-800 rounded-lg mt-8">
      <h2 class="text-white text-2xl tracking-tighter"><%= val %></h2>
      <a class="text-blue-500 inline-block mt-2" href="/file/<%= val%>">Read More</a>
    </div>
        
          <% }) %>
        <% } else{ %>
  <h3 class="text-white">no tasks yet.</h3>
       <% } %>
    
    </div>
  </div>
</body>
</html>